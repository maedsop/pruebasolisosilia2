@model IEnumerable<PruebaOsiliaSoliss.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Buscar Producto por Categoría</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.ActionLink("Productos", "buscarcategoria", new { id = item.idCategoria }) |
                
            </td>
        </tr>
    }

</table>



